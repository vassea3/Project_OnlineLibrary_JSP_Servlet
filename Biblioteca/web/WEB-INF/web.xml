<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.biblioteca.listeners.MyApplicationServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.biblioteca.servlets.cms.cmslogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contacts</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.contacts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>books</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.books</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>oneBook</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.oneBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cmsshowLogin</servlet-name>
        <servlet-class>com.biblioteca.servlets.cms.cmsshowLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>about</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.about</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>serch</servlet-name>
        <servlet-class>com.biblioteca.servlets.client.serch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contacts</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>oneBook</servlet-name>
        <url-pattern>/oneBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cmsshowLogin</servlet-name>
        <url-pattern>/cmsshowlogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>serch</servlet-name>
        <url-pattern>/serch</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
